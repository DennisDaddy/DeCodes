<% provide(:title, "Post") %>

<!-- Start container -->
<div class="container">
	
	<!-- Start row -->
    <div class="row">
        <div class="col-lg-12">
			<h2 class="page-title">View Post</h2>
			<hr>
        </div>
    </div>
    <!-- End row -->

	<!-- Start row -->
	<div class="row">
		<div class="col-sm-8">
			<h3><%= @post.title %></h3><hr>      
			<div class="entry-meta">
			  <span><i><b>Posted: <%= time_ago_in_words(@post.created_at) %> ago.</b></i></span>
			</div>
			<br>
			<p><%= @post.content %></p>
			<hr>			
		</div><!-- col-sm-8 -->

       <!-- Start col-sm-4 -->
		<div class="col-sm-4 ">
			<div class="blog_right_sidebar">
                <div class="author_widget">
                	<h4><strong>Author</strong></h4><hr>
					 <p><img src="/assets/face.jpg" width="35%"> </p>	
					 <strong>Dennis Odhiambo</strong>
					 <p>Backend Developer</p>		
				</div>
				<hr>				
			<h4 class="widget_title">Categories</h4><hr>
				<ul class="list cat-list">
				<% Category.all.each do |category| %>
                   <li><%= link_to  category.name, category %></li>                    
                <% end %>			
			</ul>
			</div>
		</div>		
		<!-- End col-sm-4 -->
	</div>
	<!-- End row -->
</div>
<!-- End container -->